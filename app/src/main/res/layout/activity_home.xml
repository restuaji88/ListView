<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="List View"
        app:layout_constraintBottom_toBottomOf="@+id/btn_reg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_reg"
        app:layout_constraintTop_toTopOf="@+id/btn_reg" />

    <Button
        android:id="@+id/btn_bo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="BIODATA"
        app:layout_constraintEnd_toEndOf="@+id/btn_reg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_reg"
        app:layout_constraintTop_toBottomOf="@+id/btn_reg" />

    <Button
        android:id="@+id/btn_fg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRAGMENT"
        app:layout_constraintBottom_toBottomOf="@+id/btn_bo"
        app:layout_constraintEnd_toEndOf="@+id/btn_lv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_lv"
        app:layout_constraintTop_toBottomOf="@+id/btn_lv"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_rc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="Recycle View"
        app:layout_constraintStart_toStartOf="@+id/btn_bo"
        app:layout_constraintTop_toBottomOf="@+id/btn_bo" />

    <Button
        android:id="@+id/btn_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btn_rc"
        app:layout_constraintTop_toBottomOf="@+id/btn_rc" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="ke camera"
        app:layout_constraintEnd_toEndOf="@+id/btn_vs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_vs"
        app:layout_constraintTop_toBottomOf="@+id/btn_vs" />
</androidx.constraintlayout.widget.ConstraintLayout>